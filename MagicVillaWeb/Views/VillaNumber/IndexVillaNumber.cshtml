@model IEnumerable<MagicVillaWeb.Model.DTO.VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt=1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNuber" class="btn btn-outline-primary pt-1">
                <i class="bi bi-file-plus"></i> Create New Villa Number
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Occupancy
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Villa.Name
                    </td>
                    <td>
                        @item.SpecialDetails
                    </td>
                    
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-success pt-1">
                            <i class="bi bi-pencil-square"></i>Update
                        </a> <a asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-danger pt-1">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>