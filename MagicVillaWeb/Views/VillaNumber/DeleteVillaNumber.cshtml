@model MagicVillaWeb.Model.DTO.VillaNumberDTO
<form asp-action="DeleteVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa </h1>
        <hr />
        <input asp-for="VillaNo" style="visibility:hidden" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Villa.Name" class="control-label pt-2" style="font-size:20px"></label>
            </div>
           
            <div class="col-2">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            
            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-warning form-control" />
            </div>
        </div>
    </div>
</form>

